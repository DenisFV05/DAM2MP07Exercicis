<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="950.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.project.Controller">

    <!-- Chat Area -->
    <VBox AnchorPane.leftAnchor="20" AnchorPane.topAnchor="20"
          prefHeight="560" prefWidth="680" spacing="12"
          style="-fx-background-color: #f0f4f8; -fx-background-radius: 12; -fx-padding: 15;">
        <children>
            <!-- Scroll de chat -->
            <ScrollPane fx:id="scrollPane" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
                        prefHeight="480.0" prefWidth="680"
                        style="-fx-background: #ffffff; -fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #cfd8dc;">
                <content>
                    <VBox fx:id="chatVBox" prefWidth="660" spacing="6"/>
                </content>
            </ScrollPane>

            <!-- Controles -->
            <HBox spacing="12" prefHeight="50">
                <children>
                    <Button fx:id="buttonPicture" mnemonicParsing="false" text="Foto"
                            onAction="#callPicture"
                            prefWidth="120" prefHeight="50"
                            style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 11pt; -fx-background-radius: 8; -fx-padding: 8 15 8 15;"/>

                    <Button fx:id="buttonBreak" mnemonicParsing="false" text="Stop"
                            onAction="#callBreak"
                            prefWidth="120" prefHeight="50"
                            style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 11pt; -fx-background-radius: 8; -fx-padding: 8 15 8 15;"/>

                    <TextField fx:id="text" prefHeight="50" promptText="Â¿En que piensas?"
                               HBox.hgrow="ALWAYS"
                               style="-fx-background-radius: 8; -fx-font-size: 11pt; -fx-padding: 0 10 0 10;"/>

                    <Button fx:id="buttonCallStream" mnemonicParsing="false" text="Say"
                            onAction="#escollirModel"
                            prefWidth="120" prefHeight="50"
                            style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 11pt; -fx-background-radius: 8; -fx-padding: 8 15 8 15;"/>

                    <Button fx:id="netejarButton" mnemonicParsing="false" text="Clear"
                            onAction="#clear"
                            prefWidth="120" prefHeight="50"
                            style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 11pt; -fx-background-radius: 8; -fx-padding: 8 15 8 15;"/>
                </children>
            </HBox>
        </children>
    </VBox>

    

</AnchorPane>
