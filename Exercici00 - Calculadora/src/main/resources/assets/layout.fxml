<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.Controller" alignment="CENTER" spacing="20">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Pantalla -->
    <TextField fx:id="pantalla" prefWidth="300" prefHeight="60">
        <font><Font size="25"/></font>
    </TextField>

    <!-- Grid de botones -->
    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <!-- Fila 1 -->
        <Button text="1" GridPane.rowIndex="0" GridPane.columnIndex="0" prefWidth="60" prefHeight="60" onAction="#insertarNumero"/>
        <Button text="2" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="60" prefHeight="60" onAction="#insertarNumero"/>
        <Button text="3" GridPane.rowIndex="0" GridPane.columnIndex="2" prefWidth="60" prefHeight="60" onAction="#insertarNumero"/>
        <Button text="+" GridPane.rowIndex="0" GridPane.columnIndex="3" prefWidth="60" prefHeight="60" onAction="#operar"/>

        <!-- Fila 2 -->
        <Button text="4" GridPane.rowIndex="1" GridPane.columnIndex="0" prefWidth="60" prefHeight="60" onAction="#insertarNumero"/>
        <Button text="5" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="60" prefHeight="60" onAction="#insertarNumero"/>
        <Button text="6" GridPane.rowIndex="1" GridPane.columnIndex="2" prefWidth="60" prefHeight="60" onAction="#insertarNumero"/>
        <Button text="-" GridPane.rowIndex="1" GridPane.columnIndex="3" prefWidth="60" prefHeight="60" onAction="#operar"/>

        <!-- Fila 3 -->
        <Button text="7" GridPane.rowIndex="2" GridPane.columnIndex="0" prefWidth="60" prefHeight="60" onAction="#insertarNumero"/>
        <Button text="8" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="60" prefHeight="60" onAction="#insertarNumero"/>
        <Button text="9" GridPane.rowIndex="2" GridPane.columnIndex="2" prefWidth="60" prefHeight="60" onAction="#insertarNumero"/>
        <Button text="*" GridPane.rowIndex="2" GridPane.columnIndex="3" prefWidth="60" prefHeight="60" onAction="#operar"/>

        <!-- Fila 4 -->
        <Button text="0" GridPane.rowIndex="3" GridPane.columnIndex="0" prefWidth="60" prefHeight="60" onAction="#insertarNumero"/>
        <Button text="C" GridPane.rowIndex="3" GridPane.columnIndex="1" prefWidth="60" prefHeight="60" onAction="#clearPantalla"/>
        <Button text="/" GridPane.rowIndex="3" GridPane.columnIndex="2" prefWidth="60" prefHeight="60" onAction="#operar"/>
        <Button fx:id="buttonEquals" text="=" GridPane.rowIndex="3" GridPane.columnIndex="3" prefWidth="60" prefHeight="60" onAction="#actionAdd" style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #4A90E2, #357ABD); -fx-border-color: blue;"/>
    </GridPane>
</VBox>
